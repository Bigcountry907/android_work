<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hftcom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F5F6F8" >

    <LinearLayout
        android:id="@+id/top"
        style="@style/fill_wrap_style"
        android:background="@drawable/top_tilte_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <include layout="@layout/title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/more_about"
                    style="@style/settingTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rect_top_bg"
                    android:drawableLeft="@drawable/more_about"
                    android:drawableRight="@drawable/right_to_blue"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="18.0dip"
                    android:text="关于我们" />

                <Button
                    android:id="@+id/more_sbxx"
                    style="@style/settingTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rect_bottom_bg"
                    android:drawableLeft="@drawable/sbxx"
                    android:drawableRight="@drawable/right_to_blue"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="18.0dip"
                    android:text="设备信息"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
 <!-- android:layout_marginTop="10dip"> -->
                <!-- <Button android:gravity="center_vertical" android:id="@+id/more_xtbz" android:background="@drawable/btn_rect_top_bg" android:paddingLeft="10.0dip" android:paddingRight="18.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="系统设置" android:drawableLeft="@drawable/more_setting" android:drawableRight="@drawable/right_to_blue" style="@style/settingTextView" /> -->

                <Button
                    android:id="@+id/more_set11"
                    style="@style/settingTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rect_top_bg"
                    android:drawableLeft="@drawable/more_update"
                    android:drawableRight="@drawable/right_to_blue"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="18.0dip"
                    android:text="版本更新"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/setflowdata"
                    style="@style/settingTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rect_top_bg"
                    android:drawableLeft="@drawable/more_update"
                    android:drawableRight="@drawable/right_to_blue"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="18.0dip"
                    android:text="设置流水" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
 <!-- android:layout_marginTop="10dip"> -->
                <!-- <Button android:gravity="center_vertical" android:id="@+id/more_xtbz" android:background="@drawable/btn_rect_top_bg" android:paddingLeft="10.0dip" android:paddingRight="18.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="系统设置" android:drawableLeft="@drawable/more_setting" android:drawableRight="@drawable/right_to_blue" style="@style/settingTextView" /> -->

                <Button
                    android:id="@+id/more_bbgx"
                    style="@style/settingTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rect_top_bg"
                    android:drawableLeft="@drawable/more_update"
                    android:drawableRight="@drawable/right_to_blue"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="18.0dip"
                    android:text="版本更新"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/more_tccx"
                    style="@style/settingTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rect_bottom_bg"
                    android:drawableLeft="@drawable/more_exit"
                    android:drawableRight="@drawable/right_to_blue"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="18.0dip"
                    android:text="退出程序" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>