<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="卡号：" />

        <TextView
            android:id="@+id/txtCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="参考号：" />

        <TextView
            android:id="@+id/txtTransNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="商户名称：" />

        <TextView
            android:id="@+id/txtBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="商户代码：" />

        <TextView
            android:id="@+id/txtBusinessNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="终端号：" />

        <TextView
            android:id="@+id/txtTermNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="金额：" />

        <TextView
            android:id="@+id/txtMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="批次号：" />

        <TextView
            android:id="@+id/txtBatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="凭证号：" />

        <TextView
            android:id="@+id/txtTermTransNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="时间：" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="@string/btn_ok" />

</LinearLayout>