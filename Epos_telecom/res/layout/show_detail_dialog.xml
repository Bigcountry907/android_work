<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top"
        android:orientation="horizontal" >

        <!--
             <TextView
            android:id="@+id/pTitle"
            style="@style/fill_wrap_style"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:textColor="#413A28"
            android:textSize="20sp" />
        -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_body"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="30dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="商户名称 : "
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="翼支付商户"
                android:textColor="@color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="交易金额 : "
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="2.00元"
                android:textColor="@color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="交易渠道 : "
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="客户端"
                android:textColor="@color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="交易类型 : "
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="消费"
                android:textColor="@color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="交易流水 : "
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="2012092805176216"
                android:textColor="@color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="交易时间 : "
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                style="@style/wrap_style"
                android:layout_gravity="center_vertical"
                android:text="2012年09月28日12点50分39秒"
                android:textColor="@color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal" 
            android:gravity="center">"

            <Button
                android:id="@+id/btn_dialog"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_time"
                android:text="确定"
                android:textColor="#ff2472a0"
                android:textSize="15dip" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>