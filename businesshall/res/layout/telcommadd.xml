<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/ddistance"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/telcommadd_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:digits="1234567890"
            android:ems="10"
            android:hint="区号"
            android:inputType="number" >
        </EditText>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="—"
            android:textColor="@color/black"
            android:textSize="20.0sp" />

        <EditText
            android:id="@+id/telcommadd_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:digits="1234567890"
            android:ems="10"
            android:hint="电话号码"
            android:inputType="number" >
        </EditText>

        <Button
            android:id="@+id/gh_random"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:text="测试号码" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ddistance"
        android:text="充值金额"
        android:textColor="@color/black"
        android:textSize="15.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ddistance"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tel_sel1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/setbar_bg"
            android:gravity="center"
            android:text="50元"
            android:textColor="@color/black"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/tel_sel2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center"
            android:text="100元"
            android:textColor="@color/black"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/tel_sel3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center"
            android:text="200元"
            android:textColor="@color/black"
            android:textSize="15.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/telcommadd_showamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ddistance"
        android:gravity="center"
        android:text="充值 0.00元"
        android:textColor="@color/black"
        android:textSize="20.0sp" />

    <Button
        android:id="@+id/telcommadd_zf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ddistance"
        android:text="立即支付" />

</LinearLayout>