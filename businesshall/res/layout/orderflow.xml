<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance"
        android:orientation="horizontal" >
    
        <EditText
            android:id="@+id/flow_phonenum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:digits="1234567890"
            android:ems="10"
            android:hint="请输入手机号码"
            android:inputType="number" />

        <Button
            android:id="@+id/flow_btnnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="常用号码" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance"
        android:text="流量包"
        android:textColor="@color/black"
        android:textSize="15.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/flow_onehundred"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/setbar_bg"
            android:gravity="center"
            android:text="100M/月"
            android:textColor="@color/black"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/flow_threehundred"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center"
            android:text="300M/月"
            android:textColor="@color/black"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/flow_onekilogram"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center"
            android:text="1GB/月"
            android:textColor="@color/black"
            android:textSize="15.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/flow_showamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance"
        android:gravity="center"
        android:text="0元/月"
        android:textColor="@color/black"
        android:textSize="20.0sp" />

    <Button
        android:id="@+id/flow_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance"
        android:text="订购" />

</LinearLayout>