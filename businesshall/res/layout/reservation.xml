<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_y"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:columnCount="6"
            android:columnWidth="30dp"
            android:numColumns="auto_fit"
            android:padding="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:rowCount="5"
            android:useDefaultMargins="false" >

            <TextView
                style="@style/IDLabelStyle"
                android:layout_columnSpan="1"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/IDTextStyle"
                android:layout_columnSpan="3"
                android:layout_gravity="fill_horizontal" />

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_rowSpan="4" />

            <TextView
                style="@style/IDLabelStyle"
                android:layout_columnSpan="1"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_sex"
                style="@style/IDTextStyle"
                android:layout_columnSpan="1" />

            <TextView
                style="@style/IDLabelStyle"
                android:layout_columnSpan="1"
                android:text="民族" />

            <TextView
                android:id="@+id/tv_ehtnic"
                style="@style/IDTextStyle"
                android:layout_columnSpan="1" />

            <TextView
                style="@style/IDLabelStyle"
                android:layout_columnSpan="1"
                android:text="出生" />

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/IDTextStyle"
                android:layout_width="wrap_content"
                android:layout_columnSpan="3" />

            <TextView
                style="@style/IDLabelStyle"
                android:layout_columnSpan="1"
                android:text="住址" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_columnSpan="3"
                android:layout_gravity="fill_horizontal"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_columnSpan="2"
                android:text="公民身份证号码"
                android:textColor="#0099CC" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_columnSpan="4"
                android:layout_gravity="fill_horizontal"
                android:textStyle="bold" />

            <TextView
                style="@style/IDLabelStyle"
                android:layout_width="100dp"
                android:layout_columnSpan="2"
                android:text="签发机关" />

            <TextView
                android:id="@+id/tv_signed"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_columnSpan="4"
                android:layout_gravity="fill_horizontal"
                android:textStyle="bold" />

            <TextView
                style="@style/IDLabelStyle"
                android:layout_width="100dp"
                android:layout_columnSpan="2"
                android:text="有效期限" />

            <TextView
                android:id="@+id/tv_validate"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_columnSpan="4"
                android:layout_gravity="fill_horizontal"
                android:textStyle="bold" />
        </GridLayout>
    </LinearLayout>
    
     <Button
            android:id="@+id/opencard_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="读身份证" />
</LinearLayout>