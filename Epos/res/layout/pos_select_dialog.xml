<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_liner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dip" >

        <TextView
            android:id="@+id/pTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip"
            android:text="@string/title_select_pos"
            android:textColor="#FFFFFF"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_body"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/mTextName"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:background="@drawable/input_bg"
                android:hint="@string/hintPOSName" />

            <Button
                android:id="@+id/mSelectPOS"
                android:layout_width="80dip"
                android:layout_height="35dip"
                android:layout_marginLeft="6dip"
                android:background="@drawable/btn_key_clear_on"
                android:text="@string/btnConfirm" />
        </LinearLayout>

        <ListView
            android:id="@+id/mListPOS"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:background="@drawable/notice_list_style"
            android:cacheColorHint="#00000000"
            android:divider="#DADADA"
            android:dividerHeight="1dip"
            android:fastScrollEnabled="true" />
    </LinearLayout>

</LinearLayout>